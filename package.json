{
  "name": "nodeboilerplate",
  "version": "0.1.0",
  "description": "Boilerplate node made by Rooftop Dev Labs",
  "main": "server.ts",
  "author": "Rooftop Dev Labs",
  "license": "MIT",
  "dependencies": {
    "@elastic/elasticsearch": "^7.15.0",
    "bcrypt": "^5.0.0",
    "bodybuilder": "^2.4.0",
    "compression": "^1.7.4",
    "convict": "^5.2.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-promise-router": "^4.1.0",
    "express-rate-limit": "^5.1.3",
    "helmet": "^3.23.0",
    "http-status": "^1.5.0",
    "inversify": "^5.0.1",
    "ioredis": "^4.17.3",
    "joi": "^14.3.1",
    "mary-command": "^0.3.0",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "readline": "^1.3.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.25",
    "uuid-validate": "^0.0.3",
    "winston": "^3.3.3",
    "winston-sentry-log": "^1.0.19",
    "winston-slack-webhook-transport": "^2.0.0"
  },
  "scripts": {
    "make:usecase": "node ./commands/generators",
    "dev:transpile": "tsc && node --inspect=0.0.0.0 dist/server.js",
    "transpile": "tsc",
    "prettier:run": "yarn prettier --write src/**/*.ts",
    "start": "NODE_ENV=development nodemon -e ts  --exec \"yarn run dev:transpile\"",
    "CI:test": "NODE_ENV=testing yarn run transpile && npx jest -w 1",
    "local:test": "NODE_ENV=testing yarn run transpile && npx jest",
    "local:single:test": "NODE_ENV=testing yarn run transpile && npx jest -t",
    "generate:coverage": "NODE_ENV=testing yarn run transpile && npx jest -w 1 --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/express": "^4.17.6",
    "@types/ioredis": "^4.16.5",
    "@types/jest": "^26.0.15",
    "@types/joi": "^14.3.4",
    "@types/node": "^14.0.13",
    "husky": "^4.3.0",
    "jest": "^26.0.1",
    "jest-extended": "^0.11.5",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn prettier:run"
    }
  }
}
